.login-page { display: flex; height: 100vh; align-items: center; justify-content: center; background-color: #f5f5f5 }
.login-card { width: 80%; max-width: 600rpx; background-color: #fff; border-radius: 12rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08); padding: 40rpx }
.login-title { font-size: 32rpx; color: #333; text-align: center; margin-bottom: 40rpx }
.login-btn { background-color: #07c160; color: #fff; border-radius: 8rpx }