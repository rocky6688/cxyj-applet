.page { padding: 32rpx; background-color: #f7f8fa; min-height: 100vh }
.title { font-size: 36rpx; font-weight: 700; margin-bottom: 20rpx; color: #1f2d3d }
.form { display: flex; flex-direction: column; gap: 16rpx; background: #fff; border-radius: 16rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06); padding: 24rpx }
.input { border: 1rpx solid #e5e5e5; border-radius: 12rpx; padding: 16rpx }
.primary { background-color: #07c160; color: #fff }
.picker-inner { font-size: 26rpx; color: #606266 }
.manager-section { margin-top: 16rpx; background: #fff; border-radius: 12rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.04); padding: 16rpx }
.manager-header { display: flex; justify-content: space-between; align-items: center; font-size: 28rpx; margin-bottom: 12rpx }
.manager-actions { display: flex; align-items: center; gap: 16rpx; margin-bottom: 12rpx }
.manager-list { display: flex; flex-direction: column; gap: 12rpx }
.manager-item { display: flex; align-items: center; gap: 12rpx }
.chevron { color: #909399 }