<view class="admin-login-page">
  <view class="brand-area">
    <view class="brand-name">橙心友家</view>
    <view class="brand-slogan">让装修管理更简单</view>
  </view>
  <view class="admin-card">
    <view class="admin-title">后台管理员登录</view>
    <input class="admin-input" placeholder="请输入用户名" bindinput="onUserInput" />
    <input class="admin-input" placeholder="请输入密码" password="true" bindinput="onPassInput" />
    <button class="admin-btn" bindtap="adminLogin">登录</button>
  </view>
</view>