.admin-login-page { display: flex; flex-direction: column; height: 100vh; align-items: center; justify-content: center; background: linear-gradient(135deg, #fff7f0 0%, #ffe8d9 50%, #fff 100%) }
.brand-area { text-align: center; margin-bottom: 24rpx }
.brand-name { font-size: 40rpx; font-weight: 800; color: #ff6b35 }
.brand-slogan { font-size: 24rpx; color: #8a8a8a; margin-top: 6rpx }
.admin-card { width: 86%; max-width: 680rpx; background-color: #fff; border-radius: 20rpx; box-shadow: 0 16rpx 40rpx rgba(255,107,53,0.15); padding: 40rpx 32rpx ;display: flex;flex-direction: column;align-items: center;}
.admin-title { font-size: 34rpx; color: #333; text-align: center; margin-bottom: 32rpx }
.admin-input { border: 1rpx solid #ffe0cc; border-radius: 14rpx; padding: 22rpx; margin-bottom: 24rpx; background: #fffaf6;width: 100%; }
.admin-btn { background-color: #ff6b35; color: #fff; border-radius: 14rpx; padding: 22rpx; font-size: 30rpx }