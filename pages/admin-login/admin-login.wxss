.admin-login-page { display: flex; height: 100vh; align-items: center; justify-content: center; background-color: #f5f5f5 }
.admin-card { width: 80%; max-width: 600rpx; background-color: #fff; border-radius: 12rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08); padding: 40rpx }
.admin-title { font-size: 32rpx; color: #333; text-align: center; margin-bottom: 40rpx }
.admin-input { border: 1rpx solid #ddd; border-radius: 8rpx; padding: 20rpx; margin-bottom: 24rpx }
.admin-btn { background-color: #007aff; color: #fff; border-radius: 8rpx }