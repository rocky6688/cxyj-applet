.page { padding: 32rpx; background-color: #f7f8fa; min-height: 100vh }
.title { font-size: 36rpx; font-weight: 700; margin-bottom: 20rpx; color: #1f2d3d }
.form { display: flex; flex-direction: column; gap: 16rpx; background: #fff; border-radius: 20rpx; box-shadow: 0 12rpx 36rpx rgba(0,0,0,0.06); padding: 24rpx }
.form-item { display: flex; flex-direction: column; gap: 8rpx }
.label { font-size: 26rpx; color: #666 }
.input { border: 1rpx solid #e5e5e5; border-radius: 12rpx; padding: 16rpx; background: #fafafa }
.primary-btn{width: 100%;display: flex;align-items: center;justify-content: center;}
.primary { background-color: #07c160; color: #fff }
.picker-inner { font-size: 26rpx; color: #606266; border: 1rpx solid #e5e5e5; border-radius: 12rpx; padding: 16rpx; background: #fff }