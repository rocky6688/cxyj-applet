.admin-page { padding: 32rpx; background-color: #f7f8fa; min-height: 100vh }
.header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 24rpx }
.title { font-size: 36rpx; font-weight: 700; color: #1f2d3d }
.menu-list { display: flex; flex-direction: column; gap: 20rpx }
.menu-item { display: flex; align-items: center; justify-content: space-between; background: #fff; border-radius: 16rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06); padding: 28rpx }
.menu-left { display: flex; flex-direction: column; gap: 6rpx }
.menu-title { font-size: 30rpx; color: #222 }
.menu-sub { font-size: 24rpx; color: #909399 }
.chevron { font-size: 36rpx; color: #c0c4cc }
.entry-btn { background-color: #333; color: #fff }