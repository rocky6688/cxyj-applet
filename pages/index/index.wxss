.home-page { display: flex; flex-direction: column; align-items: center; min-height: 100vh; background: linear-gradient(135deg, #fff7f0 0%, #ffe8d9 50%, #fff 100%); padding: 40rpx 24rpx }
.brand-area { text-align: center; margin-top: 20rpx; margin-bottom: 24rpx }
.brand-name { font-size: 44rpx; font-weight: 800; color: #ff6b35 }
.brand-slogan { font-size: 26rpx; color: #8a8a8a; margin-top: 8rpx }
.hero-card { width: 92%; max-width: 700rpx; background: #fff; border-radius: 20rpx; box-shadow: 0 16rpx 40rpx rgba(255,107,53,0.15); padding: 40rpx 32rpx; text-align: center }
.hero-title { font-size: 36rpx; font-weight: 700; color: #1f2d3d }
.hero-sub { font-size: 26rpx; color: #7a7a7a; margin-top: 10rpx }
.hero-actions { display: flex; justify-content: center; gap: 20rpx; margin-top: 24rpx }
.primary-btn { background-color: #ff6b35; color: #fff; border-radius: 14rpx; padding: 20rpx 30rpx; font-size: 30rpx }
.ghost-btn { background: #fff; border: 1rpx solid #ff6b35; color: #ff6b35; border-radius: 14rpx; padding: 20rpx 30rpx; font-size: 30rpx }
.admin-entry { margin-top: 20rpx; font-size: 26rpx; color: #ff6b35; text-decoration: underline }