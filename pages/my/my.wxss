.my-page { padding: 24rpx; background: linear-gradient(180deg, #f0f9ff 0%, #ffffff 40%); min-height: 100vh; box-sizing: border-box }

/* 顶部品牌区域 */
.my-header { padding: 40rpx 24rpx 24rpx; text-align: center }
.brand { font-size: 36rpx; font-weight: 700; color: #111 }
.slogan { color: #7a7a7a; margin-top: 12rpx }

/* 未登录卡片 */
.card { background: #fff; border-radius: 16rpx; box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.06); padding: 28rpx }
.title { font-size: 34rpx; font-weight: 600 }
.subtitle { color: #888; margin-top: 8rpx; margin-bottom: 20rpx }

.avatar-wrap { display: flex; align-items: center; gap: 20rpx; margin-bottom: 20rpx }
.avatar-main { width: 112rpx; height: 112rpx; border-radius: 50%; background: #f5f5f5; border: 2rpx solid #eee }
.avatar-edit { background-color: #07c160; color: #fff; border-radius: 999rpx; padding: 16rpx 28rpx }

.form-item { margin-bottom: 20rpx }
.label { font-size: 26rpx; color: #666; margin-bottom: 8rpx }
.input-row { display: flex; gap: 12rpx; align-items: center }
.flex { flex: 1 }
.input { border: 1rpx solid #ddd; border-radius: 12rpx; padding: 16rpx; background: #fafafa }
.ghost-btn { background: #fff; border: 1rpx solid #07c160; color: #07c160; border-radius: 999rpx; padding: 12rpx 20rpx }

.primary-btn { background-color: #07c160; color: #fff; border-radius: 12rpx; padding: 18rpx; font-size: 30rpx }
.privacy-tip { color: #9a9a9a; font-size: 24rpx; text-align: center; margin-top: 12rpx }

/* 已登录卡片 */
.profile-card { background: #fff; border-radius: 16rpx; box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.06); padding: 28rpx }
.profile-top { display: flex; align-items: center; gap: 16rpx; margin-bottom: 16rpx }
.profile-avatar { width: 96rpx; height: 96rpx; border-radius: 50%; background: #f5f5f5 }
.profile-name { font-size: 30rpx; font-weight: 600 }
.profile-actions { display: flex; justify-content: flex-end }
.logout-btn { background-color: #ff4d4f; color: #fff; border-radius: 12rpx; padding: 18rpx }