.page { padding: 32rpx; background-color: #f7f8fa; min-height: 100vh }
.title { font-size: 36rpx; font-weight: 700; margin-bottom: 20rpx; color: #1f2d3d }
.card { background: #fff; border-radius: 20rpx; box-shadow: 0 16rpx 40rpx rgba(255,107,53,0.15); padding: 24rpx; color: #606266 }
.store-bar { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16rpx }
.picker-inner { font-size: 26rpx; color: #606266; border: 1rpx solid #ffe0cc; border-radius: 12rpx; padding: 12rpx; background: #fffaf6 }
.date-bar { display: flex; align-items: center; gap: 12rpx; margin-bottom: 16rpx }
.date-range { display: flex; align-items: center; gap: 12rpx }
.metrics { display: grid; grid-template-columns: repeat(4, 1fr); gap: 16rpx; margin: 16rpx 0 }
.metric { background: #fff; border-radius: 16rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06); padding: 20rpx; text-align: center }
.metric-label { font-size: 26rpx; color: #606266 }
.metric-value { font-size: 40rpx; color: #ff6b35; font-weight: 700 }
.chart { width: 100%; height: 300rpx; background: #fff; border-radius: 16rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06); margin: 12rpx 0 }
.section-title { font-size: 30rpx; color: #333; margin-bottom: 12rpx }
.staff-grid { display: flex; flex-direction: column; gap: 8rpx }
.staff-row { display: grid; grid-template-columns: 2fr 1fr 1fr 1fr 1fr; gap: 12rpx; align-items: center; padding: 12rpx; border-bottom: 1rpx solid #f0f0f0 }
.staff-header { background: #fafafa; font-weight: 600 }
.empty { padding: 60rpx 0; display: flex; flex-direction: column; align-items: center; justify-content: center; color: #909399 }
.empty-img { width: 360rpx }
.empty-text { margin-top: 16rpx; font-size: 26rpx }
 .primary { background-color: #07c160; color: #fff }