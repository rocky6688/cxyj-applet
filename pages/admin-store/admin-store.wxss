.page { padding: 32rpx; background-color: #f7f8fa; min-height: 100vh }
.title { font-size: 36rpx; font-weight: 700; margin-bottom: 20rpx; color: #1f2d3d }
.header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 24rpx;align-items: center;}
.add-btn { background-color: #07c160; color: #fff;display: flex;text-align: right;}
.create-form { display: flex; flex-direction: column; gap: 16rpx; background: #fff; border-radius: 16rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06); padding: 24rpx; margin-bottom: 24rpx }
.input { border: 1rpx solid #e5e5e5; border-radius: 12rpx; padding: 16rpx }
.primary { background-color: #07c160; color: #fff }
.list { display: flex; flex-direction: column; gap: 20rpx }
.item { background: #fff; border-radius: 16rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06); padding: 24rpx }
.item-header { display: flex; flex-direction: column; gap: 6rpx; margin-bottom: 12rpx }
.item-title { font-size: 30rpx; color: #222 }
.item-sub { font-size: 24rpx; color: #909399 }
.item-actions { display: flex; gap: 12rpx }
.edit-panel { background: #fafafa; border: 1rpx solid #eee; border-radius: 12rpx; padding: 16rpx; margin-top: 12rpx; display: flex; flex-direction: column; gap: 12rpx }
.picker-inner { font-size: 26rpx; color: #606266 }
.edit-actions { display: flex; gap: 12rpx }