<view class="page">
  <view class="header">
    <view class="title">门店管理</view>
    <button class="add-btn" size="mini" bindtap="goToCreate">新增门店</button>
  </view>

  <view class="list">
    <block wx:for="{{stores}}" wx:key="_id">
      <view class="item">
        <view class="item-header">
          <text class="item-title">{{item.name}}</text>
          <text class="item-sub">编码：{{item.code}}｜状态：{{item.status}}</text>
        </view>
        <view class="item-actions">
          <button size="mini" bindtap="startEdit" data-id="{{item._id}}">编辑</button>
          <button size="mini" type="warn" bindtap="removeStore" data-id="{{item._id}}">删除</button>
        </view>
      </view>

      
    </block>
  </view>
</view>