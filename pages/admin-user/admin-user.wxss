.page { padding: 32rpx; background-color: #f7f8fa; min-height: 100vh }
.header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 24rpx }
.title { font-size: 36rpx; font-weight: 700; color: #1f2d3d }
.add-btn { background-color: #07c160; color: #fff }
.list { display: flex; flex-direction: column; gap: 20rpx }
.item { background: #fff; border-radius: 16rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06); padding: 24rpx }
.item-header { display: flex; flex-direction: column; gap: 6rpx; margin-bottom: 12rpx }
.item-title { font-size: 30rpx; color: #222 }
.item-sub { font-size: 24rpx; color: #909399 }
.item-actions { display: flex; gap: 12rpx }

.dialog-mask { position: fixed; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.35); display: flex; align-items: center; justify-content: center; z-index: 999 }
.dialog-card { width: 86%; background: #fff; border-radius: 16rpx; box-shadow: 0 12rpx 36rpx rgba(0,0,0,0.18); padding: 24rpx; display: flex; flex-direction: column; gap: 16rpx }
.dialog-title { font-size: 30rpx; font-weight: 600; color: #222 }
.dialog-content { display: flex; flex-direction: column; gap: 12rpx; color: #606266 }
.dialog-tip { color: #ff6b35 }
.dialog-picker .picker-inner { font-size: 26rpx; color: #606266; border: 1rpx solid #e5e5e5; border-radius: 12rpx; padding: 16rpx; background: #fafafa }
.dialog-actions { display: flex; justify-content: flex-end; gap: 12rpx }
.primary { background-color: #07c160; color: #fff }
