.admin-page { padding: 24rpx }
.header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24rpx }
.title { font-size: 32rpx; font-weight: 600 }
.create-btn { background-color: #07c160; color: #fff; margin: 0rpx !important; width: auto !important; }
.tpl-list { display: flex; flex-direction: column; gap: 20rpx }
.create-row { display: flex; gap: 16rpx; align-items: center; margin-bottom: 24rpx }
.input { border: 1rpx solid #ddd; border-radius: 8rpx; padding: 16rpx; flex: 1 }
.btn { background-color: #007aff; color: #fff }
.tpl-item { background: #fff; border-radius: 12rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05); padding: 24rpx }
.tpl-name { font-size: 28rpx; margin-bottom: 12rpx }
.tpl-status { color: #999; margin-left: 16rpx }
.tpl-default { color: #ff6b35; margin-left: 12rpx }
.tpl-actions { display: flex; gap: 16rpx }