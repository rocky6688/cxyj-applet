{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["es2020"],
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "prisma/**/*"]
}